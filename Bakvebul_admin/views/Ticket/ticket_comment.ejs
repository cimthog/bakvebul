<%- contentFor('body') %>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="mt-0 header-title">Ticket Comments</h4>
                <div class="card">
                    <div class="card-body">
                        <input type="hidden" id="user_pub_id_for_ticket">
                        <input type="hidden" id="divice_token_for_ticket">
                        <h4 class="mt-0 header-title mb-4">Chat</h4>
                        <input type="hidden" name="ticket_id" id="ticket_id" value="<%= ticket_id %>">
                        <div class="chat-conversation">
                            <ul class="conversation-list slimscroll" style="height: 250px;" id="showTicketComments">
                                
                            </ul>
                            <div class="row">
                                <div class="col-sm-8 col-8 chat-inputbar">
                                    <input type="text" class="form-control chat-input" id="ticket_comment_text" placeholder="Enter your text">
                                </div>
                                <div class="col-sm-2 col-4 chat-send">
                                    <button type="submit" class="btn btn-success btn-block" onclick="sendTicketComments('<%= ticket_id %>')">
                                        <i id="btn_submit_loading" style="display: none" class="fa fa-spinner fa-spin"></i>
                                        Send
                                    </button>
                                </div>
                                <div class="col-sm-2 col-4 chat-send">
                                    <button type="reset" class="btn btn-info btn-block" onclick="showTicketComments('<%= ticket_id %>')">
                                        <!-- <i id="btn_submit_loading" style="display: none" class="fa fa-spinner fa-spin"></i> -->
                                        Reset
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- end col -->
</div> <!-- end row -->
                     

