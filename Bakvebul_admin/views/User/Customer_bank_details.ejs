                                </div>
                                <div class="form-group col-sm-4">
                                    <label for="handy_phone" class="col-form-label">Handy Phone</label>
                                    <input class="form-control" type="text" placeholder="Handy Phone" required
                                            id="handy_phone" name="handy_phone" value="<%= result.handy_phone %>"/>
                                </div>
                                <div class="form-group col-sm-4">
                                    <label for="iban" class="col-form-label">IBAN</label>
                                    <input class="form-control" type="text" placeholder="IBAN" required
                                            id="iban" name="iban" value="<%= result.iban %>"/>
                                </div>
                                <div class="form-group col-sm-4">
                                    <label for="address" class="col-form-label">Adress Information</label>
                                    <input class="form-control" type="text" placeholder="Adress Information" required
                                            id="address" name="address" value="<%= result.address %>"/>
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary waves-effect waves-light">
                                    Submit
                                </button>
                            </div>
                        </form>
