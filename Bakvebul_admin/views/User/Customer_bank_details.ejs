<%- contentFor('body') %>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <ul class="nav nav-tabs nav-tabs-custom" role="tablist">
                    <%- include('customer_partial') %>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane p-3 active">
                        <form data-toggle="validator" id="Customer_bank_detail_add">
                            <div class="row">
                                <input type="hidden" name="user_pub_id" id="user_pub_id" value="<%= user %>">
                                <div class="form-group col-sm-4">
                                    <label for="name" class="col-form-label">Name</label>
                                    <input class="form-control" type="text" placeholder="Please Enter Name" id="name" name="name" required value="<%= result.name %>"/>
                                </div>
                                <div class="form-group col-sm-4">
                                    <label for="t_c_id_no" class="col-form-label">T.C ID No</label>
