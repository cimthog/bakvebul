<%- contentFor('HeaderCss') %>

<%- contentFor('breadcrumb') %>

<div class="col-sm-6">
    <h4 class="page-title">Api Keys</h4>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="javascript:void(0);">Bakvebul</a></li>
        <li class="breadcrumb-item active">Api Keys</li>
    </ol>
</div>
<%- contentFor('body') %>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <!-- Nav tabs -->
                    <ul class="nav nav-tabs nav-tabs-custom nav-justified" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#Firebase_tab" role="tab">
                                <span class="d-block d-sm-none"><i class="fas fa-home"></i></span>
                                <span class="d-none d-sm-block">Firebase</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#Mailgun_tab" role="tab">
                                <span class="d-block d-sm-none"><i class="far fa-user"></i></span>
                                <span class="d-none d-sm-block">Mailgun</span>
                            </a>
                        </li>
                    </ul>
                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div class="tab-pane active p-3" id="Firebase_tab" role="tabpanel">
                            <div class="row">
                                <div class="col-lg-12">
                                    <h4>Update Firebase Key</h4>
                                    <form action="" id="firebase_key_form">
                                        <div class="form-group">
                                            <label for="">Firebase Key*</label> 
                                            <input type="hidden" name="api_name" id="api_name" value="Firebase">
                                            <input type="text" name="firebase_key" id="firebase_key" class="form-control" value="<%= firebase.api_key_1 %>">
                                        </div>
                                        <div class="form-group">
                                            <label for="">Firebase Database URL*</label>
                                            <input type="text" name="firebase_databaseURL" id="firebase_databaseURL" class="form-control" value="<%= firebase.api_key_1 %>">
                                        </div>
                                        <button type="submit" class="btn btn-primary">Update</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane p-3" id="Mailgun_tab" role="tabpanel">
                            <div class="row">
                                <div class="col-lg-12">
                                    <h4>Update Mailgun Key</h4>
                                    <form action="" id="Mailgun_form">
                                        <div class="form-group">
                                            <label for="api_name">Api Key*</label> 
                                            <input type="hidden" name="api_name" id="api_name" value="Mailgun">
                                            <input type="text" name="api_key_1" id="api_key_1" class="form-control" value="<%= Mailgun.api_key_1 %>" required>
                                        </div>
                                        <div class="form-group">
                                            <label for="api_key_2">Domain*</label>
                                            <input type="text" name="api_key_2" id="api_key_2" class="form-control" value="<%= Mailgun.api_key_2 %>">
                                        </div>
                                        <button type="submit" class="btn btn-primary">Update</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>
<%- contentFor('FooterJs') %>

<script src="public/assets/js/app.js"></script>

<%- contentFor('BottomJs') %>